%% Formatting for general page requirements
\doublespacing
\setlength{\parindent}{0pt}

%%Dates
\newdateformat{noDay}{\monthname, \THEYEAR}
\newdateformat{Memorandum}{\monthname \, \THEDAY, \THEYEAR}

%Table of Contents
\renewcommand*\thesection{\arabic{section}.0 \ }
\renewcommand*\thesubsection{\arabic{section}.\arabic{subsection}}
\renewcommand{\contentsname}{Table of Contents}

%% Title page formatting
\newcommand{\FirstPage}[3]{
    \begin{titlepage}
        \begin{center}
            \includegraphics[width=17cm]{waterloo-math.jpg}
            \vskip 50pt
            \huge{\textbf{\WTT}} 
            \vskip 20pt
            \large #1\\ #2
            \vskip 170pt
            \LARGE \textbf{\name}  #3\\
            Computer Science \term\\
            \noDay\today
        \end{center}
    \end{titlepage}
}

%% Memorandum Heading Formatting
\newcommand{\MemorandumHead}[1]{
    \pagestyle{empty}
    \LARGE MEMORANDUM
    \vskip 20pt
    \normalsize 
    \begin{tabular}{l l}
        To:     & #1\\
        From:   & \name \\
        Date:   & \Memorandum\today \\
        Re:     & Work Term Report: \WTT
    \end{tabular}
    \vskip 10pt
    \noindent\rule{\textwidth}{1pt}
    \vskip 10pt
}

%%Formatting for PageNumbering
\newcommand{\header}{
    \pagenumbering{roman}
    \setcounter{page}{2}
    \pagestyle{fancy}
    \rhead{ \thepage}
    \lhead{}
    \cfoot{}
    \renewcommand{\headrulewidth}{0pt}
}