%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% Page Formatting

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\newcommand{\pageFormatting}{
    \doublespacing
    \pagenumbering{roman}
    \setcounter{page}{2}
    \pagestyle{fancy}
    \fancyhf{}
    \fancyfoot[C]{\thepage}
    \fancypagestyle{plain}{
        \fancyhf{}
        \fancyfoot[C]{\thepage}
    }
    % removes default line
    \renewcommand{\headrulewidth}{0pt}
}

% No indentation
\setlength{\parindent}{0pt}

